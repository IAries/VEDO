ifeq ($(ENVIRONMENT_MODE), NCHC-ALPS-User-GCC)
    PREFIX            = ${HOME}/usr/local/vedo/
    XERCESC_ROOT      = /pkg/mech/vedo/xerces-c/
    MAKE              = /usr/bin/gmake
    COMPILER_MODE     = NCHC-ALPS-GCC
    AR                = /usr/bin/ar
    AR_FLAG           = -r
