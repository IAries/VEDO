    AR                = /c/usr/win-builds-32/bin/ar.exe
    AR_FLAG           = -r
    STD_CPP_PREDEFINE = -D_STD_CPP_11 -std=c++11
else
ifeq ($(ENVIRONMENT_MODE), NCHC-ALPS-VEDO-Intel)
